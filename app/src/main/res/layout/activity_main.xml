<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_main"
    tools:context=".MainActivity">

    <!-- Ust Kisim: %10 - Platform Tabs + Edit Button -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:orientation="horizontal"
        android:background="@color/background_header">

        <!-- Abteilung Scroll Area -->
        <HorizontalScrollView
            android:id="@+id/platformScrollView"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:scrollbars="none"
            android:fillViewport="true">

            <LinearLayout
                android:id="@+id/platformContainer"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingStart="8dp"
                android:paddingEnd="8dp">

                <!-- Abteilung tabs buraya dinamik eklenecek -->

            </LinearLayout>

        </HorizontalScrollView>

        <!-- Sag taraf: Clock + Controls + WiFi Status -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingStart="@dimen/header_padding_start"
            android:paddingEnd="@dimen/header_padding_end"
            android:background="@color/primary_dark">

            <!-- Digital Clock -->
            <TextClock
                android:id="@+id/digitalClock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:format24Hour="HH:mm"
                android:format12Hour="HH:mm"
                android:textColor="@color/white"
                android:textSize="@dimen/clock_text_size"
                android:textStyle="bold"
                android:layout_marginEnd="@dimen/clock_margin_end" />

            <!-- Refresh Tables -->
            <ImageButton
                android:id="@+id/btnRefresh"
                android:layout_width="@dimen/header_button_size"
                android:layout_height="@dimen/header_button_size"
                android:src="@android:drawable/ic_menu_rotate"
                android:background="@drawable/oval_button_background"
                android:contentDescription="Refresh"
                android:padding="@dimen/header_button_padding"
                android:layout_marginEnd="@dimen/header_button_margin"/>

            <!-- Scale Down -->
            <ImageButton
                android:id="@+id/btnScaleDown"
                android:layout_width="@dimen/header_button_size"
                android:layout_height="@dimen/header_button_size"
                android:src="@android:drawable/btn_minus"
                android:background="@drawable/oval_button_background"
                android:contentDescription="Scale down"
                android:padding="@dimen/header_button_padding"
                android:layout_marginEnd="6dp"/>

            <!-- Scale Up -->
            <ImageButton
                android:id="@+id/btnScaleUp"
                android:layout_width="@dimen/header_button_size"
                android:layout_height="@dimen/header_button_size"
                android:src="@android:drawable/btn_plus"
                android:background="@drawable/oval_button_background"
                android:contentDescription="Scale up"
                android:padding="@dimen/header_button_padding"
                android:layout_marginEnd="@dimen/header_button_margin"/>

            <!-- Edit Mode Toggle -->
            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/switchEditMode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Edit"
                android:textColor="@color/white"
                android:textSize="@dimen/edit_switch_text_size"
                app:thumbTint="@color/accent"
                app:trackTint="@color/primary_light"
                android:minHeight="@dimen/edit_switch_min_height"
                android:layout_marginEnd="@dimen/edit_switch_margin_end"/>

            <!-- Settings Button -->
            <ImageButton
                android:id="@+id/btnSettings"
                android:layout_width="@dimen/header_button_size"
                android:layout_height="@dimen/header_button_size"
                android:src="@android:drawable/ic_menu_preferences"
                android:background="@drawable/oval_button_background"
                android:contentDescription="Settings"
                android:padding="@dimen/header_button_padding"
                android:layout_marginEnd="@dimen/header_button_margin" />

            <!-- WiFi Status Icon -->
            <ImageView
                android:id="@+id/ivWifiStatus"
                android:layout_width="@dimen/wifi_icon_size"
                android:layout_height="@dimen/wifi_icon_size"
                android:src="@drawable/ic_wifi_4"
                android:contentDescription="WiFi Status" />

        </LinearLayout>

    </LinearLayout>

    <!-- Alt Kisim: %90 - Table Floor Area -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="90">

        <com.lotus.lptablelook.view.TableFloorView
            android:id="@+id/tableFloorView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/background_floor"/>

        <!-- Edit Mode Info Banner -->
        <TextView
            android:id="@+id/editModeBanner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|center_horizontal"
            android:layout_marginTop="8dp"
            android:text="EDIT MODE - Masalari surukleyerek pozisyonlarini ayarlayin"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:background="@color/edit_mode_highlight"
            android:paddingHorizontal="16dp"
            android:paddingVertical="8dp"
            android:visibility="gone"/>

    </FrameLayout>

</LinearLayout>