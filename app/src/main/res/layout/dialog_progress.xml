<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="280dp"
    android:layout_height="wrap_content"
    app:cardCornerRadius="16dp"
    app:cardElevation="12dp"
    app:cardBackgroundColor="@color/dialog_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <!-- Turquoise Header Bar -->
        <View
            android:layout_width="match_parent"
            android:layout_height="6dp"
            android:background="@color/turquoise" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="32dp">

            <!-- Custom Progress Ring -->
            <FrameLayout
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginBottom="24dp">

                <!-- Outer Ring Background -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/progress_ring_bg" />

                <!-- Progress Indicator -->
                <com.google.android.material.progressindicator.CircularProgressIndicator
                    android:id="@+id/progressIndicator"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_gravity="center"
                    android:indeterminate="true"
                    app:indicatorColor="@color/turquoise"
                    app:trackColor="@color/turquoise_soft"
                    app:trackThickness="4dp"
                    app:indicatorSize="64dp" />

                <!-- Center Icon -->
                <ImageView
                    android:id="@+id/ivProgressIcon"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_gravity="center"
                    android:src="@android:drawable/ic_menu_rotate"
                    app:tint="@color/turquoise_dark" />

            </FrameLayout>

            <!-- Title -->
            <TextView
                android:id="@+id/tvProgressTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Verbindung wird getestet"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:layout_marginBottom="8dp" />

            <!-- Message -->
            <TextView
                android:id="@+id/tvProgressMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bitte warten..."
                android:textSize="14sp"
                android:textColor="@color/text_secondary"
                android:gravity="center" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
